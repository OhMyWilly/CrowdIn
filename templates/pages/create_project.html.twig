{% extends 'base.html.twig' %}

{% block title %}Soumission de projet
{% endblock %}

{% block body %}
	<style></style>

	<h2>Soumettez votre projet ici</h2>
	<br>
	<div>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<div class="col-sm d-flex justify-content-center">
			<input type="hidden" name="id_author" value="{{ app.user.id }}">
			<input type="hidden" name="author" value="{{ app.user.firstName }} {{ app.user.lastName|first }}">
			<input id="submit" type="submit" name="submit" value="Soumettre" class="btn btn-dark">
		</div>
		{{ form_end(form)}}
	</div>
	<br><br>
{% endblock %}
